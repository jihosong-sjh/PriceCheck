# 데이터베이스
DATABASE_URL=postgresql://pricecheck:pricecheck123@localhost:5433/pricecheck

# JWT 시크릿 (프로덕션에서 반드시 변경)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# AWS S3 (이미지 업로드용)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=pricecheck-images
AWS_REGION=ap-northeast-2

# 서버 설정
PORT=3001
NODE_ENV=development

# CORS 설정
CORS_ORIGIN=http://localhost:3000

# 가격 알림 작업 (개발 환경에서 테스트 시 true로 설정)
ENABLE_ALERT_JOB=false

# 레이트 제한 (분당 요청 수)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Google Cloud Vision API (이미지 인식용)
# 로컬 개발: 서비스 계정 JSON 키 파일 경로
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json
# 클라우드 배포 (Railway/Render 등): 서비스 계정 JSON을 직접 환경변수에 설정
# GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"...","private_key":"..."}

# 네이버 검색 API (쇼핑 검색용)
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
